<!-- res/drawable/textview_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/regal_blue"/> <!-- 눌릴 때 배경색 -->
            <stroke android:width="1dp" android:color="@color/regal_blue"/> <!-- stroke 색상 -->
            <corners android:radius="8dp"/> <!-- corner radius -->
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="@color/white"/> <!-- 기본 배경색 -->
            <stroke android:width="1dp" android:color="@color/regal_blue"/> <!-- stroke 색상 -->
            <corners android:radius="8dp"/> <!-- corner radius -->
        </shape>
    </item>
</selector>
