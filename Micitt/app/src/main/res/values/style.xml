<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="OssLicensesTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/regal_blue</item>
        <item name="colorPrimaryDark">@color/regal_blue</item>

        <item name="actionBarStyle">@style/OssLicensesActionBar</item>
    </style>

    <style name="OssLicensesActionBar" parent="Widget.AppCompat.ActionBar">
        <item name="background">@color/regal_blue</item>
        <item name="titleTextStyle">@style/OssLicensesActionBarTitleText</item>
    </style>

    <style name="OssLicensesActionBarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_btn_cancel_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_btn_cancel</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/regal_blue</item>
        <item name="android:textAlignment">center</item>

        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="dialog_btn_confirm_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_btn_confirm</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
