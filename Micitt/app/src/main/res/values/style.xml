<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="dialog_btn_cancel_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_btn_cancel</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/regal_blue</item>
        <item name="android:textAlignment">center</item>

        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>

    <style name="dialog_btn_confirm_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_btn_confirm</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
    </style>

    <style name="dialog_background_style">
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="por_favor_s">
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="android:textColor">#000000</item>
    </style>

</resources>