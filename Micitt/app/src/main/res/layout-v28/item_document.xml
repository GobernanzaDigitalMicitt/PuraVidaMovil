<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layer_document"
        android:layout_width="match_parent"
        android:layout_height="210dp"
        android:background="@drawable/bg_certi_card"
        android:orientation="vertical"
        android:padding="14dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ico_close"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_type"
                android:layout_width="49dp"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="JSON"
                android:textColor="@color/white"
                android:background="@drawable/tag"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Health Information"
                android:textFontWeight="500"
                android:lineSpacingExtra="-1sp"
                android:gravity="top"
                android:textAppearance="@style/driver_s_li"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/str_issuer"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Issuer"
                android:textFontWeight="300"
                android:textAppearance="@style/issuer_cost"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_vc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ministerio de Hacienda"
                android:textStyle="normal"
                android:textFontWeight="300"
                android:lineSpacingExtra="2sp"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:gravity="top"
                android:textAppearance="@style/issuer_cost"
                android:layout_toEndOf="@id/str_issuer"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/str_date"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:text="Issued Date"
                android:textFontWeight="300"
                android:gravity="top"
                android:textAppearance="@style/issuer_cost"
                android:textStyle="normal"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2024. 07. 15"
                android:paddingStart="4dp"
                android:paddingEnd="0dp"
                android:textFontWeight="300"
                android:textAppearance="@style/some_id"
                android:lineSpacingExtra="4sp"
                android:layout_toEndOf="@id/str_date"
                android:gravity="top"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>