<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:layout_margin="12dp"
    android:background="@drawable/bg_round_theme_edge"
    android:padding="12dp">

    <!-- Nombre de la agencia -->
    <TextView
        android:id="@+id/tv_agency_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/micitt_theme"
        android:textSize="16sp"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/fuel_info_container"
        android:layout_marginEnd="12dp"
        tools:text="Nombre Agencia" />

    <!-- Contenedor para información de combustible -->
    <LinearLayout
        android:id="@+id/fuel_info_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Tipo de combustible -->
        <TextView
            android:id="@+id/fuelType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="end"
            tools:text="Super 95" />

        <!-- Precio del combustible -->
        <TextView
            android:id="@+id/fuelPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="end"
            android:layout_marginTop="4dp"
            tools:text="¢865.50" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>