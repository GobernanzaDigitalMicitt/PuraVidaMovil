<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_round_theme_edge"
    android:layout_margin="12dp"
    android:id="@+id/agency_outer_layer"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_agency_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:lineSpacingExtra="2sp"
        android:translationY="-1.22sp"
        android:gravity="center_vertical"
        android:textSize="16sp"
        android:textColor="@color/micitt_theme"
        android:layout_marginEnd="12dp"
        />
    
    <RelativeLayout
        android:id="@+id/layer_agency_emitir"
        android:layout_width="72dp"
        android:layout_height="42dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/bg_round_theme">

        <TextView
            android:id="@+id/tv_agency_emitir"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lineSpacingExtra="3sp"
            android:textColor="@color/white"
            android:text="Emitir"
            android:gravity="center" />

    </RelativeLayout>

</androidx.appcompat.widget.LinearLayoutCompat>